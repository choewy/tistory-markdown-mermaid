{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  },
  "projects": {
    "broadcast": {
      "type": "application",
      "root": "broadcast",
      "entryFile": "main",
      "sourceRoot": "apps/broadcast/src",
      "compilerOptions": {
        "tsConfigPath": "apps/broadcast/tsconfig.app.json"
      }
    },
    "main": {
      "type": "application",
      "root": "main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis/tsconfig.lib.json"
      }
    },
    "conf": {
      "type": "library",
      "root": "libs/conf",
      "entryFile": "index",
      "sourceRoot": "libs/conf/src",
      "compilerOptions": {
        "tsConfigPath": "libs/conf/tsconfig.lib.json"
      }
    },
    "docs": {
      "type": "library",
      "root": "libs/docs",
      "entryFile": "index",
      "sourceRoot": "libs/docs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/docs/tsconfig.lib.json"
      }
    },
    "util": {
      "type": "library",
      "root": "libs/util",
      "entryFile": "index",
      "sourceRoot": "libs/util/src",
      "compilerOptions": {
        "tsConfigPath": "libs/util/tsconfig.lib.json"
      }
    }
  }
}
